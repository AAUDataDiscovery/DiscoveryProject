{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "file_path": {
      "type": "string"
    },
    "extension": { "enum": ["json", "csv", "parquet"] },
    "size": {
      "type": "object",
      "properties": {
        "quantity": {
          "type": "integer"
        },
        "unit": { "enum": ["byte", "kilobyte", "megabyte", "gigabyte"] }
      },
      "required": [
        "quantity",
        "unit"
      ]
    },
    "hash": {
      "type": "integer"
    },
    "columns": {
      "type": "array",
      "$ref": "#",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "mean": {
              "type": ["number", "null"]
            },
            "minimum": {
              "type": ["integer","number", "string", "null"]
            },
            "maximum": {
              "type": ["integer","number", "string", "null"]
            },
            "columns": {
              "type": "array",
              "$ref": "#"
            },
            "relationships": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "certainty": {
                      "type": "number"
                    },
                    "target_file_hash": {
                      "type": "string",
                      "minLength": 8,
                      "maxLength": 8
                    },
                    "target_column_name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "certainty",
                    "target_file_hash",
                    "target_column_name"
                  ]
                }
              ]
            }
          },
          "required": [
            "name",
            "relationships"
          ]
        }
      ]
    }
  },
  "required": [
    "file_path",
    "extension",
    "size",
    "hash",
    "columns"
  ]
}